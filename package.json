{
  "name": "ecommerce-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Microservices E-commerce Platform",
  "workspaces": [
    "services/*",
    "shared/*",
    "frontend/*"
  ],
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:auth": "npm run dev -w @ecommerce/auth",
    "dev:product": "npm run dev -w @ecommerce/product",
    "dev:gateway": "npm run dev -w @ecommerce/gateway",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ecommerce-platform.git"
  },
  "author": "Bruno",
  "license": "MIT"
}
